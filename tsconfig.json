{
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ],
    "compilerOptions": {
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    }
}